<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SquareFloatingActionButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/SquareShapeAppearance</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="SquareShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ContentEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:typeface">normal</item>
        <item name="android:padding">8dp</item>
        <item name="android:lines">15</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">start|top</item>
    </style>
</resources>